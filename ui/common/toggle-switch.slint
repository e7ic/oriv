export component ToggleSwitch inherits Rectangle {
    in-out property <bool> checked;
    callback toggled(bool);
    width: 44px;
    height: 24px;
    border-radius: 12px;
    background: checked ? #10b981 : #e5e7eb; // Green when checked, Gray when unchecked

    animate background { duration: 200ms; }
    TouchArea {
        width: 100%;
        height: 100%;
        clicked => {
            root.checked = !root.checked;
            root.toggled(root.checked);
        }
    }

    Rectangle {
        x: root.checked ? parent.width - self.width - 2px : 2px;
        y: 2px;
        width: 20px;
        height: 20px;
        border-radius: 10px;
        background: white;
        animate x {
            duration: 200ms;
            easing: ease-in-out;
        }
    }
}
